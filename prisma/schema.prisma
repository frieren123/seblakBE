// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Order {
  createdAt DateTime    @default(now())
  id        String      @id @default(uuid())
  client    String
  status    String
  orderlist Orderlist[]
}

model Spicylevel {
  id            Int             @id @default(autoincrement())
  level         Int
  price         Int
  orderlist     Orderlist[]
}

model Orderlist {
  id            String          @id @default(uuid())
  orderId       String
  order         Order           @relation(fields: [orderId], references: [id])
  orderlistitem Orderlistitem[]
  additional    String?
  spicylevelId  Int
  spicylevel    Spicylevel      @relation(fields: [spicylevelId], references: [id])

}

model Orderlistitem {
  id          String    @id @default(uuid())
  orderlistId String
  productsId  String
  orderlist   Orderlist @relation(fields: [orderlistId], references: [id])
  product     Products  @relation(fields: [productsId], references: [id])
  qty         Int
}

model Products {
  id            String          @id @default(uuid())
  name          String
  price         Int
  Orderlistitem Orderlistitem[]
}